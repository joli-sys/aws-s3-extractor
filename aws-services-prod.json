{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "S3Extractor": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "allowSpecificRolesFromSameAccount",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": {
                "Effect": "Allow",
                "Action": "sts:AssumeRole",
                "Resource": [
                  "arn:aws:iam::061240556736:role/martin-ex-s3"
                ]
              }
            }
          },
          {
            "PolicyName": "stsAssumeAllRolesFromOtherAccounts",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": {
                "Effect": "Allow",
                "Action": "sts:AssumeRole",
                "NotResource": {
                  "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/*"
                }
              }
            }
          }
        ]
      }
    }
  }
}
